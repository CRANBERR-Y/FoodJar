<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_greyish"
    tools:context=".CartActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editAddress"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/order_button"
        android:layout_width="fill_parent"
        android:layout_height="58dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/btn_place_order_style"
        android:text="Place Order"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView2"
        app:layout_constraintVertical_bias="0.974" />

    <Button
        android:id="@+id/final_order_button"
        android:layout_width="fill_parent"
        android:layout_height="58dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/btn_place_order_style"
        android:text="Order"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView2"
        app:layout_constraintVertical_bias="0.974" />


    <TextView
        android:id="@+id/total"
        android:layout_width="200dp"
        android:layout_height="41dp"
        android:layout_marginBottom="80dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="0.0"
        android:textColor="#000000"
        android:textFontWeight="800"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/total2" />

    <TextView
        android:id="@+id/food_amount1"
        android:layout_width="200dp"
        android:layout_height="41dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="0.0"
        android:textColor="#000000"
        android:textFontWeight="800"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/delivery_ch1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/total2" />

    <TextView
        android:id="@+id/delivery_ch1"
        android:layout_width="200dp"
        android:layout_height="41dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="0.0"
        android:textColor="#000000"
        android:textFontWeight="800"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/total"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/total2" />

    <TextView
        android:id="@+id/total2"
        android:layout_width="210dp"
        android:layout_height="41dp"
        android:layout_marginBottom="80dp"
        android:background="#ffffff"
        android:gravity="left"
        android:text="TotalAmount(₹):"
        android:textColor="#000000"
        android:textFontWeight="800"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/food_amount"
        android:layout_width="210dp"
        android:layout_height="41dp"
        android:background="#ffffff"
        android:gravity="left"
        android:text="Item total(₹):"
        android:textColor="#000000"
        android:textFontWeight="800"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/delivery_ch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/delivery_ch"
        android:layout_width="210dp"
        android:layout_height="41dp"
        android:background="#ffffff"
        android:gravity="left"
        android:text="DeliveryCharges(₹):"
        android:textColor="#000000"
        android:textFontWeight="800"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/total2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/editAddress"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@drawable/edit_address"
        android:text="Edit Address"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>